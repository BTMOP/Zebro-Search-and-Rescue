
NUMBOTS=40
MINVAR=2.5
VARSTEP=0.5
STARTSEED=1
TOTALSTEPS=8

TRIES=10

ENDSEED=$(echo "$STARTSEED + $TRIES - 1" | bc)

for i in $(seq $STARTSEED $ENDSEED)
do
	SEED=$i
	for j in $(seq 0 $TOTALSTEPS)
	do
		VAR=$(echo "$MINVAR + $VARSTEP * $j" | bc)
		echo "USING $VAR VAR and SEED $SEED"
		./simulate -a 4 -s $i -b $NUMBOTS -t $VAR
	done
done
