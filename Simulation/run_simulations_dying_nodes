OUTPUT_FILE=false
NUMBOTS=25

POSITIONAL=()
while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    -f|--file)
    OUTPUT_FILE="$2"
    shift # past argument
    shift # past value
    ;;
	-b|--bots)
	NUMBOTS="$2"
	shift # past argument
	shift # p
	;;
    *)    # unknown option
    POSITIONAL+=("$1") # save it in an array for later
    shift # past argument
    ;;
esac
done
set -- "${POSITIONAL[@]}" # restore positional parameters


MINVAR=1000
VARSTEP=100
STARTSEED=1
TOTALSTEPS=6

TRIES=10

ENDSEED=$(echo "$STARTSEED + $TRIES - 1" | bc)


echo "Going to run dying nodes simulations for $NUMBOTS bots"
if [ "$OUTPUT_FILE" != "false" ]
then
	echo "Going to run dying nodes simulations for $NUMBOTS bots" >> $OUTPUT_FILE
fi


for i in $(seq $STARTSEED $ENDSEED)
do
	SEED=$i
	for j in $(seq 0 $TOTALSTEPS)
	do
		VAR=$(echo "$MINVAR + $VARSTEP * $j" | bc)
		echo "USING $VAR VAR and SEED $SEED"
		if [ "$OUTPUT_FILE" != "false" ]
		then
			echo "USING $VAR VAR and SEED $SEED" >> $OUTPUT_FILE
		fi
		./simulate -a 3 -s $i -b $NUMBOTS -k $VAR -d 100000 |
		while IFS= read -r line
		do
			echo "$line"
			if [ "$OUTPUT_FILE" != "false" ]
			then
				echo "$line" >> $OUTPUT_FILE
			fi
		done
	done
done



